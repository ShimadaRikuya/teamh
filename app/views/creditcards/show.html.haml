.default-contener
  = render "users/header"
.wrapper
  = render "users/user-side"

  .container
    .mypage-card__right
      .signup-main4__head
        .signup-main4__headtext
          %label-card1 登録クレジットカード情報
          %br
      .card-input-content5
        .card-delete__numbertext
          カード番号
        .card-delete__number
          = "**** **** **** " + @default_card_information.last4
          %br
        .card-delete__limmittext
          有効期限
        .card-delete__limmit
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year
        .card-delete__btnform
          = form_tag(delete_creditcards_path, method: :post, id: 'charge-form',  name: "inputForm", class:'btn-block') do
            %input{ type: "hidden", name: "card_id", value: "" }
              %button.btn-default 削除する

%aside.appBanner
  = render "users/appbanner"
.footer
  = render "users/footer"