.default-contener
  = render "users/header"
.wrapper
  = render "users/user-side"

  .container
    .mypage-card
      .mypage-card--flex
        .mypage-card__right
          .signup-main4
            .signup-main4__headtext
              クレジットカード情報入力
        
          = form_tag(pay_creditcards_path, method: :post, id: 'charge-form',  name: "inputForm") do
            .card-input-content4
              .form-group
                %label
                .card-number
                  カード番号
                  %span
                    必須
                .card-number-form
                  = text_field_tag "number", "", class: "number input-default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                %ul.card-images
                  %li
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763", size: "49x20",alt:"visa"
                  %li
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763", size: "34x20",alt:"master-card"
                  %li
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763", size: "30x20",alt:"saison-card"
                  %li
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763", size: "32x20",alt:"jcb"
                  %li
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763", size: "21x20",alt:"american_express"
                  %li
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763", size: "32x20",alt:"dinersclub"
                  %li
                    =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763", size: "32x20",alt:"discover"
              .form-group
                %label
                .card-limmit
                  有効期限
                  %span
                    必須
                .select-wrap
                  .select-wrap-half
                    %select#exp_month{name: "exp_month", type: "text"}
                      %option{value: ""} --
                      %option{value: "1"}01
                      %option{value: "2"}02
                      %option{value: "3"}03
                      %option{value: "4"}04
                      %option{value: "5"}05
                      %option{value: "6"}06
                      %option{value: "7"}07
                      %option{value: "8"}08
                      %option{value: "9"}09
                      %option{value: "10"}10
                      %option{value: "11"}11
                      %option{value: "12"}12
                  %span-month
                    月
                  .select-wrap-half
                    %select#exp_year{name: "exp_year", type: "text"}
                      %option{value: ""} --
                      %option{value: "2020"}20
                      %option{value: "2021"}21
                      %option{value: "2022"}22
                      %option{value: "2023"}23
                      %option{value: "2024"}24
                      %option{value: "2025"}25
                      %option{value: "2026"}26
                      %option{value: "2027"}27
                      %option{value: "2028"}28
                      %option{value: "2029"}29
                      %option{value: "2030"}30
                  %span-year
                    年
              .form-group
                %label
                .card-code
                  セキュリティーコード
                  %span
                    必須
                .card-cvc-form
                  = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                
              #card_token
                = submit_tag "追加する", class:"btn-default",id: "token_submit", type: "submit"

%aside.appBanner
  = render "users/appbanner"

.footer
  = render "users/footer"